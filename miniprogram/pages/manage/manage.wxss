/* pages/manage/manage.wxss */
page {
  height: 100%;
}

.welcome {
  text-align: center;
}

.m-t-40 {
  margin-top: 40rpx;
}
.login-view{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.8);
}

.password {
  border: 4rpx solid #ddd;
  font-size: 28rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 350rpx;
  color: #ddd;
  margin-top: 20rpx;
  text-align: center;
  padding: 0 40rpx;
}

.placeholder {
  text-align: center;
}

.login {
  border: 4rpx solid #ddd;
  font-size: 38rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60%;
  background: #ddd;
  color: rgba(0, 0, 0, 0.8);
  margin-top: 20rpx;
}

